{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}

{% block body %}
    <h1 class="page-title"> Contacto
        <small>Elige el email donde recibirás las notificaciones de la web</small>
    </h1>
    

    <div class="portlet-body form">
        <!-- BEGIN FORM-->
        <form class="form-horizontal" method="POST">
            <div class="form-body">
                <div class="alert alert-danger display-hide">
                    <button class="close" data-close="alert"></button> You have some form errors. Please check below. </div>
                <div class="alert alert-success display-hide">
                    <button class="close" data-close="alert"></button> Your form validation is successful! </div>
                
                <div class="form-group">

                    <div class="col-md-offset-2 col-md-8">
                        <div class="input-group col-md-12 col-md-offset-0 col-lg-6 col-lg-offset-3 col-xl-4 col-xl-offset-4">
                            <span class="input-group-addon">
                                <i class="fa fa-envelope"></i>
                            </span>
                            <input type="email" class="form-control" name="email" placeholder="Dirección de correo" value="{{email}}"> 
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-actions">
                <div class="row">
                    <div class="col-md-12">
                        <button type="submit" class="btn green"><i class="fa fa-check"></i> Enviar</button>
                        <button type="button" name="cancel" class="btn grey-salsa btn-outline" style="float:right;">Cancelar</button>
                    </div>
                </div>
            </div>
        </form>
        <!-- END FORM-->
    </div>
{% endblock %}